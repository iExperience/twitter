<div class="twitter_profile">
  <table>
    <tr>
      <td class="photo"><%=image_tag 'FatCatMoon.jpg', :class => 'avatar' %></td>
    </tr>
    <tr>
     <td>
        <div class="twitter_handle"><%= @user.handle %></div>
      </td>
    </tr>
  </table>
</div>

<table class="tweets_list">
<% @tweets.each do |tweet| %>
  <tr>
    <td>
      <div class="tweet_body">
        <%= tweet.body %>
      </div>
      <div class="tweet_timestamp">
        <%= time_ago_in_words(tweet.created_at) %> ago
      </div>
    </td>
  </tr>
<% end %>
</table>