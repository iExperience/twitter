<div class="twitter_profile">
  <table>
    <tr>
      <td class="photo">
        <%= image_tag @user.avatar.url(:thumb), :class => 'avatar' %>
      </td>
    </tr>
    <tr>
     <td>
        <div class="twitter_handle"><%= @user.handle %></div>
      </td>
    </tr>
  </table>
</div>

<table class="tweets_list">
<% @tweets.each do |tweet| %>
  <%= render partial: "tweets/tweet", locals: {tweet: tweet} %>
<% end %>
</table>