<%= form_for tweet do |f| %>
  <div class="form-group">
    <%= f.text_area :body, :class => "form-control", :placeholder => "How are you feeling? In 140 characters or less :)" %>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="A comma separated list of hashtags" name="tweet[hashtags]">
  </div>
  <div class="form-group">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>